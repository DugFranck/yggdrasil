{% extends 'base.html.twig' %}

{% block title %}Mon compte -Yggdrasil {% endblock %}

{% block content %}
    <h1>Mon compte</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <small><a href="/admin">Vous êtes un administrateur, accedé au backoffice ?</a></small><br />
    {% endif %}
    Bienvenue {{ app.user.firstname }} dans votre compte !
    <hr>


    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/images/padlock.png') }}" alt="Modifier mon mot de passe"><br />
                <a href="{{ path('account_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center" >
                <img src="{{ asset('assets/images/carnet-dadresses.png') }}" alt="Gérer mes adresses"><br />
                <a href="{{ path('account_address') }}">Gérer mes adresses</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/images/shopping-bag.png') }}" alt="Mes commandes"><br />
                <a href="{{ path('account_command') }}">Mes commandes</a>
            </div>
        </div>


    </div>
{% endblock %}
