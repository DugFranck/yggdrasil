                        <h3 class="heading"> Categories</h3>
                        {{ form(form) }}
                </div>
                <div class="col-md-8 col-lg-9 order-md-last">
                    <div class="row">
                        <!--debut for-->
                        {% for news in news%}
                            <div class="blog-entry align-self-stretch d-md-flex">

                                {% include 'news/single_news.html.twig' %}

                            </div>
